{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div style="text-align: center; margin-top: 50px;">
        <h1>Registration</h1>

        {% for message in app.flashes('error') %}
            <div style="color: red; margin-bottom: 15px;" class="flash-error">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(registrationForm) }}
        <div style="display: flex; flex-direction: column; align-items: center; margin-bottom: 15px;">
            <label for="{{ registrationForm.nickname.vars.id }}">Nickname:</label>
            {{ form_widget(registrationForm.nickname, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(registrationForm.nickname) }}
        </div>
        <div style="display: flex; flex-direction: column; align-items: center; margin-bottom: 15px;">
            <label for="{{ registrationForm.email.vars.id }}">Email:</label>
            {{ form_widget(registrationForm.email, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div style="display: flex; flex-direction: column; align-items: center; margin-bottom: 15px;">
            <label for="{{ registrationForm.password.vars.id }}">Password:</label>
            {{ form_widget(registrationForm.password, {'attr': {'class': 'input-field'}}) }}
            {{ form_errors(registrationForm.password) }}
        </div>
        <button type="submit" style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; cursor: pointer; margin-bottom: 15px;">Register</button>
        {{ form_end(registrationForm) }}

        <a href="{{ path('login_form') }}" style="padding: 10px 20px; background-color: #2196F3; color: white; border: none; cursor: pointer; margin-bottom: 15px;">Log In</a>
    </div>
{% endblock %}
